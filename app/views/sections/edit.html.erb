<div class="container">

<h1>Edit Section</h1>

<form class="form-horizontal" role="form" action="/sections/<%= @section.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
    <label for="section_name">Name</label>
    <input id="section_name" class="form-control" name="section[name]" type="text" value="<%= @section.name %>">
    <label for="section_order_number">Number</label>
    <input id="section_order_number" class="form-control" name="section[order_number]" type="int" value="<%= @section.order_number %>">
    <label for="section_chapter_id">Section</label>
    <input id="section_chapter_id" class="form-control" name="section[chapter_id]" type="int" value="<%= @section.chapter_id %>">
    <button class="btn btn-warning margin">Update section</button>
</form>

</div>
