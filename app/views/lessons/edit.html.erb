<div class="container">

<h1>Edit Lesson</h1>

<form class="form-horitonztal" action="/lessons/<%= @lesson.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="lesson_name">Name</label>
  <input id="lesson_name" class="form-control" name="lesson[name]" type="text" value="<%= @lesson.name %>">
  <label for="lesson_order_number">Order Number</label>
  <input id="lesson_order_number" class="form-control" name="lesson[order_number]" type="int" value="<%= @lesson.order_number %>">
  <input name="lesson[section_id]" type="hidden">
  <select class="form-control" name="lesson[section_id]">
    <% @sections.each do |section| %>
      <option value="<%= section.id %>"><%= section.name %></option>
    <% end %>
  </select>
  <br>
  <label for="lesson_body">Text</label>
  <textarea class="form-control" rows="4" id="lesson_body" name="lesson[body]"><%= @lesson.body %></textarea>
  <button class="btn btn-warning">Update Lesson</button>
</form>

</div>
