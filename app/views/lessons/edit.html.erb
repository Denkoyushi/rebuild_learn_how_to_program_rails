<h1>Edit Lesson</h1>

<form action="/lessons/<%= @lesson.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="lesson_name">Name</label>
  <input id="lesson_name" name="lesson[name]" type="text" value="<%= @lesson.name %>">
  <label for="lesson_order_number">Order Number</label>
  <input id="lesson_order_number " name="lesson[order_number]" type="int" value="<%= @lesson.order_number %>">
  <input name="lesson[section_id]" type="hidden">
  <select name="lesson[section_id]">
    <% @sections.each do |section| %>
      <option value="<%= section.id %>"><%= section.name %></option>
    <% end %>
  </select>
  <br>
  <label for="lesson_body">Text</label>
  <textarea rows="20" cols="70" id="lesson_body" name="lesson[body]"><%= @lesson.body %></textarea>
  <button>Update Lesson</button>
</form>
