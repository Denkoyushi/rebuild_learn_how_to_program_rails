<h1>Table of Contents</h1>



<ul>
  <% @chapters.each do |chapter| %>
  <li><a href="/chapters/<%= chapter.id %>"><%= chapter.name %></a></li>
    <ul>
      <% chapter.sections.order(:order_number).each do |section| %>
       <li><a href="/sections/<%= section.id %>"><%= section.name %></a></li>
       <ul>
          <% section.lessons.order(:order_number).each do |lesson| %>
          <li><a href="/lessons/<%= lesson.id %>"><%= lesson.name %></a></li>
          <% end %>
       </ul>
      <% end %>
    </ul>
  <% end %>
</ul>


<a href="lessons/new"><button>Make new Lesson</button></a>

<a href="sections/new"><button>Make new Section</button></a>

<a href="chapters/new"><button>Make new Chapter</button></a>

