<h1>Table of Contents</h1>



<ul>
  <% @sections.sort_by! { |section| section.order_number } %>
  <% @sections.each do |section| %>
    <li><a href="/sections/<%= section.id %>"><%= section.name %></a></li>
    <ul>
      <% section.lessons.sort_by! { |lesson| lesson.order_number } %>
      <% section.lessons.each do |lesson| %>
        <li><a href="/lessons/<%= lesson.id %>"><%= lesson.name %></a></li>
      <% end %>
    </ul>
  <% end %>
</ul>


<a href="lessons/new"><button>Make new Lesson</button></a>

<a href="sections/new"><button>Make new Section</button></a>
